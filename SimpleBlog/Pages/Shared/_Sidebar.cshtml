<!-- Sidebar Widgets Column -->
<div class="col-md-4">

	<!-- Search Widget -->
	<div class="card my-4 bg-dark text-white">
		<h5 class="card-header">Search</h5>
		<div class="card-body">
			<form action="/Search/Search" method="get">
				<input name="query" class="form-control" type="text" placeholder="Search" aria-label="Search" required>
				<button class="btn form-control" type="submit">Click Me</button>
			</form>
		</div>
	</div>

	<!-- Categories Widget -->
	<div class="card my-4 bg-dark text-white">
		<h5 class="card-header">Categories</h5>
		<div class="card-body">
			<div class="row">
				<div class="col-lg-12">
					<ul class="list-unstyled mb-0">

						@foreach (var tag in Model.Tags)
						{
							<li>
								<a asp-page="/Search/Tag" asp-route-query="@tag.TagName">@tag.TagName</a>
							</li>
						}

						
					</ul>
				</div>
			</div>
		</div>
	</div>
